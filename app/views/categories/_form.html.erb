<div class="container">
  <%= render 'shared/errors', object: @category %>
  <%= form_with(model: @category, class: "shadow mb-2 bg-info rounded", local: true) do |f| %>

    <div class="form-group row p-3">
      <%= f.label :name, "Category name", class: "col-3 text-light" %><br/>
      <%= f.text_field :name, class: "form-control col-7 shadow mb-3 bg-white rounded", placeholder: "Enter a name" %>
    </div>

    <div class="row form-group">
      <div class="col-4 offset-4">
        <%= f.submit class: "btn btn-lg btn-success w-100 mb-2" %>
      </div>
    </div>
  <% end %>
  
  <p class="text-center">
    <% if @category.new_record? %>
      <%= link_to "Return to categories listing", categories_path, class: "text-info" %>
    <% else %>
      <%= link_to "Return to the category", @category %>
    <% end %>
  </p>
</div>  