<h1>Listing Articles</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.description %></td>
        <td><%= link_to "Edit", "#" %></td>
        <td><%= link_to "Show", "#" %></td>
        <td><%= link_to "Delete", "#" %></td>
      </tr>  
    <% end %>
  </tbody>
</table>