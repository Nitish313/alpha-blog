<div class="container">
  <%= render 'shared/errors', object: @article %>
  <%= form_with(model: @article, class: "shadow mb-2 bg-info rounded", local: true) do |f| %>
    <div class="form-group row p-3">
      <%= f.label :title, class: "col-3 text-light" %><br/>
      <%= f.text_field :title, class: "form-control col-7 shadow mb-3 bg-white rounded", placeholder: "Title of article" %>
    </div>
    <div class="form-group row p-3">
      <%= f.label :description, class: "col-3 text-light" %><br/>
      <%= f.text_area :description, class: "form-control col-7 shadow mb-3 bg-white rounded", rows: 10, placeholder: "Description of article" %>
    </div>
    <div class="form-group row p-3">
      <%= f.label :category, class: "col-3 text-light" %><br/>
      <%= f.collection_select(:category_ids, Category.all, :id, :name,
            { prompt: "Make your selection from the list below(can be empty)" }, { multiple: true, size: 3, class: "form-control col-7 shadow mb-3 bg-white rounded" }) %>
    </div>
    <div class="row">
      <div class="col-4 offset-4">
        <%= f.submit class: "btn btn-lg btn-success w-100 mb-2" %>
      </div>
    </div>
  <% end %>

  <p class="text-center"><%= link_to yield(:articles_listing), articles_path, class: "text-info" %></p>
</div>  