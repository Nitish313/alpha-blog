<div class="container">
  <%= render 'shared/errors', object: @user %>
  <%= form_with(model: @user, class: "shadow mb-2 bg-info rounded", local: true) do |f| %>

    <div class="form-group row p-3">
      <%= f.label :username, class: "col-3 text-light" %><br/>
      <%= f.text_field :username, class: "form-control col-7 shadow mb-3 bg-white rounded", placeholder: "Enter a username" %>
    </div>

    <div class="form-group row p-3">
      <%= f.label :email, class: "col-3 text-light" %><br/>
      <%= f.email_field :email, class: "form-control col-7 shadow mb-3 bg-white rounded", placeholder: "Enter your email address" %>
    </div>

    <div class="form-group row p-3">
      <%= f.label :password, class: "col-3 text-light" %><br/>
      <%= f.password_field :password, class: "form-control col-7 shadow mb-3 bg-white rounded", rows: 10, placeholder: "Enter your password" %>
    </div>

    <div class="row form-group">
      <div class="col-4 offset-4">
        <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: "btn btn-lg btn-success w-100 mb-2") %>
      </div>
    </div>
  <% end %>
  
  <p class="text-center"><%= link_to "Cancel and return to articles listing", articles_path, class: "text-info" %></p>
</div>  